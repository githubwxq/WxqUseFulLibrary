<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:tl="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.wxq.wxqusefullibrary.bmob.activity.homepage.HomeFragment">

    <!--
     tl:tl_indicator_color="@color/grey_bg"
        tl:tl_indicator_corner_radius="5dp"
        tl:tl_indicator_margin_left="2dp"
        tl:tl_indicator_margin_right="2dp"
        tl:tl_indicator_style="BLOCK"
     -->
    <com.example.wxq.wxqutilslibrary.widget.mulripletablayout.SlidingTabLayout
        android:id="@+id/tl_2"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/white"
        tl:tl_tab_padding="15dp"
        tl:tl_tab_space_equal="true"
        tl:tl_textSelectColor="@color/pink"
        tl:tl_textUnselectColor="@color/black"
        tl:tl_underline_color="#1A000000"
        tl:tl_indicator_color="@color/pink"
        tl:tl_underline_height="2dp"
        android:fillViewport="false" />

    <android.support.v4.view.ViewPager
        android:layout_below="@+id/tl_2"
        android:id="@+id/vp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</RelativeLayout>
